{
  "MonstersDbSqlOptions": {
    "ConnectionString": "Server=sql-server;Database=monsters;User Id=sa;Password=Password123!!;TrustServerCertificate=True;"
  },
  "RabbitMqTransportOptions": {
    "Host": "rabbitmq",
    "Port": 5672,
    "User": "guest",
    "Pass": "guest"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '/health%' or RequestPath like '/swagger%' or RequestPath = '/'"
        }
      }
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.AspNetCore": "Error",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Using": [
      "Serilog.Expressions",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.OpenTelemetry"
    ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://seq:5341" }
      },
      {
        "Name": "Otel",
        "Args": { "serverUrl": "http://aspire-dashboard:18889" }
      }
    ]
  }
}
